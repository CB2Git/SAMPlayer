<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="137dp"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ntf_cover"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ntf_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0f0f0f"
                android:textSize="15sp"
                tools:text="歌手名字" />


            <TextView
                android:id="@+id/ntf_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="歌曲名字" />

        </LinearLayout>


        <ImageView
            android:id="@+id/ntf_pre"
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/ic_pre" />

        <ImageView
            android:id="@+id/ntf_statue"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:src="@mipmap/ic_pause" />

        <ImageView
            android:id="@+id/ntf_next"
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/ic_next" />

        <ImageView
            android:id="@+id/ntf_close"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/ic_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是大布局的通知栏 长按即可切换为小的~~~" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下面这个按钮点击会发送一个自定义的动作" />

        <Button
            android:id="@+id/ntf_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点我试试" />
    </LinearLayout>


</LinearLayout>